<?xml version="1.0" encoding="utf-8"?>

<pages:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:Librarian.Pages"
             xmlns:viewModels="clr-namespace:Librarian.ViewModels"
             x:Class="Librarian.Pages.UploadPage"
             Background="{StaticResource Primary}"
             x:DataType="viewModels:UploadViewModel">
    <pages:ContentPageBase.Content>
        <Grid  Margin="50, 150, 50, 110" RowDefinitions="9*, 1*">
            <Border BackgroundColor="{StaticResource Secondary}"
                StrokeShape="RoundRectangle 20, 20, 5, 5" Stroke="Transparent">
            <Grid RowDefinitions="1*, 7*, 2*">
                <Label Text="{Binding PdfName}" Margin="20, 15"/>
                <VerticalStackLayout Spacing="10" Grid.Row="1" VerticalOptions="Center">
                <Border BackgroundColor="White" StrokeShape="RoundRectangle 80"
                        HorizontalOptions="Center" VerticalOptions="Center"
                        Padding="20" Stroke="Transparent">
                            <Image Source="{Binding UploadPdfIcon}"/>
                            <Border.Shadow>
                                <Shadow Brush="Black"
                                        Offset="0, 4"
                                        Radius="1"
                                        Opacity="0.3" />
                            </Border.Shadow>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ChooseFileCommand }"></TapGestureRecognizer>
                            </Border.GestureRecognizers>
                </Border>
                <Label Text="{Binding UploadPdfLabel}" TextTransform="Uppercase" FontSize="24" 
                       FontAttributes="Bold" HorizontalTextAlignment="Center"
                       FontFamily="KoulenRegular"/>
                </VerticalStackLayout>
                    <Border Stroke="Transparent" StrokeShape="RoundRectangle 8" Margin="15" 
                            VerticalOptions="End" BackgroundColor="White" Grid.Row="2">
                        <Entry FontSize="18" 
                               Placeholder="Title..." PlaceholderColor="{StaticResource Gray400}" 
                               Text="{Binding ChatTitle}">
                        </Entry>
                        <Border.Shadow>
                            <Shadow Brush="Black"
                                    Offset="0, 4"
                                    Radius="2"
                                    Opacity="0.3"/>
                        </Border.Shadow>
                    </Border>
                </Grid>
            </Border>
            <Border Grid.Row="1" BackgroundColor="{StaticResource Secondary}"
                    StrokeShape="RoundRectangle 5, 5, 15, 15" Stroke="Transparent"
                    Padding="10" VerticalOptions="Start" Margin="0, 5, 0, 0">
                <Label Text="See all chats" FontFamily="KoulenRegular" FontAttributes="Bold"
                       HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                <Border.Shadow>
                    <Shadow Brush="Black"
                            Offset="0, 4"
                            Radius="2"
                            Opacity="0.3"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToAllChatsCommand}"/>
                </Border.GestureRecognizers>
            </Border>
        </Grid>
        
    </pages:ContentPageBase.Content>
</pages:ContentPageBase>